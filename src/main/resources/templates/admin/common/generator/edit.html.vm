<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
						<input id="${pk.columnName}" name="${pk.columnName}" th:value="${${classname}.${pk.columnName}}"  type="hidden">
#foreach($column in $columns)
#if($column.columnName != $pk.columnName)

    <div class="gg-formGroup">
        <div class="gg-formTitle">
            <span>${column.comments}:</span>
        </div>
        <div class="gg-formDetail">
            <input type="text" class="form-control" id="${column.attrname}" name="${column.attrname}" th:value="${${classname}.${column.attrname}}" />
        </div>
    </div>
							#end
							#end
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
	</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript" src="/js/appjs/${pathName}/${classname}/edit.js">
	</script>
</body>
</html>
